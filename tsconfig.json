{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "app": ["./src/app"],
      "app/*": ["./src/app/*"],
      "pages": ["./src/pages"],
      "pages/*": ["./src/pages/*"],
      "widgets": ["./src/widgets"],
      "widgets/*": ["./src/widgets/*"],
      "features": ["./src/features"],
      "features/*": ["./src/features/*"],
      "entities": ["./src/entities"],
      "entities/*": ["./src/entities/*"],
      "shared": ["./src/shared"],
      "shared/*": ["./src/shared/*"],
    }
  }
}
